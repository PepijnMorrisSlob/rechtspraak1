# Frontend Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_TITLE=RechtSpraak Archives Assistant
VITE_APP_VERSION=1.0.0

# Development Configuration
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# Feature Flags
VITE_ENABLE_DOCUMENT_PREVIEW=true
VITE_ENABLE_BATCH_PROCESSING=true
VITE_ENABLE_CHAT_HISTORY=true

# UI Configuration
VITE_MAX_CHAT_HISTORY=100
VITE_DEFAULT_CHUNK_SIZE=1000
VITE_RESULTS_PER_PAGE=20 